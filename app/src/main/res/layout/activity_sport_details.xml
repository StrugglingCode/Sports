        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SportDetails" android:background="@drawable/sport_details">
    <ImageView
            android:layout_width="392dp"
            android:layout_height="126dp" app:srcCompat="@drawable/boxing" android:id="@+id/imageView3"
